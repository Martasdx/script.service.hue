<addon id="script.service.hue" name="Philips Hue Service" provider-name="zim514" version="0.0.9~beta">
	
  <requires>
    <import addon="xbmc.python" version="2.25.0" />
    <import addon="script.module.requests" />
    <import addon="script.module.simpleplugin" />
  </requires>
  
  
  <extension library="service.py" point="xbmc.service" />
  <extension library="default.py" point="xbmc.python.script">
  	<provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
  
    <summary lang="en_GB">Philips Hue Lights Service</summary>
    <description lang="en_GB">Automate your Philips Hue lights with Kodi. Automatically change brightness, colour and state of your light groups when you start, pause or stop media, with flexible settings for each group.</description>
    <platform>all</platform>
    <assets>
  		<icon>resources/icon.png</icon>
  	</assets>
    <source>https://github.com/zim514/script.service.hue</source>
  </extension>
  
</addon>